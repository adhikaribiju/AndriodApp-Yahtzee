<!-- res/drawable/blue_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
            <stroke
                android:width="8dp"
                android:color="#80B3E5FC" />
        </shape>
    </item>

    <!-- Main border layer -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
            <stroke
                android:width="4dp"
            android:color="#2196F3" />
        </shape>
    </item>
</layer-list>
